{
  "name": "cs4530-vite",
  "version": "1.0.0",
  "description": "CS4530 Template",
  "type": "module",
  "scripts": {
    "check": "npm-run-all check:*",
    "check:frontend": "tsc -p frontend/tsconfig.json",
    "check:server": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "npm-run-all test:*",
    "test:frontend": "playwright test",
    "test:server": "vitest run --coverage",
    "dev": "echo \"Run \\`npm run dev:server\\` and \\`npm run dev:frontend\\` separately\\n\"",
    "dev:frontend": "vite frontend",
    "dev:server": "node --watch ./src/server.ts",
    "build": "tsc -p frontend/tsconfig.json --noEmit && vite build frontend",
    "start": "MODE=production node ./src/server.ts",
    "playwright": "playwright test --ui"
  },
  "author": "Rob Simmons",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@types/express": "^5.0.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.58.1",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "express": "^5.2.1",
    "zod": "^4.3.6"
  }
}
