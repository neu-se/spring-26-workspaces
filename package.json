{
  "name": "cs4530-workspaces",
  "version": "1.0.0",
  "description": "CS4530 Template",
  "author": "Rob Simmons",
  "workspaces": [
    "frontend",
    "server",
    "shared"
  ],
  "scripts": {
    "check": "npm run check --workspaces",
    "lint": "eslint .",
    "prettier": "prettier --check .",
